  "ingredients": ["ingredient1", "ingredient2"],
  "instructions": "Test instructions",
  "prepTime": 10,
  "cookTime": 20,
  "servings": 4,
  "cuisine": "Test",
  "imageUrl": "https://example.com/test.jpg",
  "difficulty": "Easy",
  "tags": ["test"],
  "author": "Test Author"
}

